<div id="water_counter_panel">
	<table class="table table-condensed table-striped table-bordered table-hover no-margin">
		<thead>
			<tr>
				<th># מונה</th>
				<th># פיסי</th>
				<th>תמונה</th>
				<th>תיאור כללי</th>
				<th>נ"צ</th>
				<th>סוג מונה</th>
				<th>שוחה (אופציונלי)</th>
				<th>היסטוריה</th>
				<th>מחק</th>
			</tr>
		</thead>
		<tbody>
			<%= f.fields_for :water_counters do |builder| %>
			<%= render partial: 'water_counter_fields', locals: { f: builder} %>
			<% end %>
		</tbody>
	</table>  




	<%= link_to_add_fields "הוסף מונה מים חדש", f, :water_counters %>

	<div>
		<%= f.label "% שפכים לחיוב" %>
		<%= f.text_field :sewage_billing_percentage %>
	</div>
</div>